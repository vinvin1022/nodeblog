<%- include('header') %>
<div class="container text-right"> 
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#">Disabled</a>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= session.userInfo.username %>
      </a>
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <a class="dropdown-item" href="/loginout">登出</a>
      </div>
    </div>
  </div>
</nav>
  
</div>

<div class="container"> 
<table class="table table-striped table-bordered">
  <thead class="thead-light">
    <tr>
      <th scope="col">id</th>
      <th scope="col">用户名</th>
      <th scope="col">手机号</th>
      <th scope="col">邮箱</th>
    </tr>
  </thead>
  <tbody>
  <% usersList.forEach(function(val){ %>
    <tr>
      <th><%= val._id %></th>
      <th><%= val.username %></th>
      <td><%= val.phone %></td>
      <td><%= val.email %></td>
    </tr>
  <% }) %>  
  </tbody>
</table>
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item <%= pageData.previous ? '' : 'disabled' %>">
      <a class="page-link" href="/?pageNum=<%= pageData.previous %>">上一页</a>
    </li>
    <li class="page-item <%= pageData.first ? '' : 'disabled' %>">
      <a class="page-link" href="/?pageNum=<%= pageData.first %>">第一页</a>
    </li>
    <% for(var i=0;i<pageData.range.length;i++){ %>
    <li class="page-item <%= pageData.range[i] == pageData.current ? 'active' : '' %>">
      <a class="page-link" href="/?pageNum=<%= pageData.range[i] %>"><%= pageData.range[i] %></a>
    </li>
    <% } %>
    <li class="page-item <%= pageData.last ? '' : 'disabled' %>">
      <a class="page-link" href="/?pageNum=<%= pageData.last %>">最后一页</a>
    </li>
    <li class="page-item  <%= pageData.next ? '' : 'disabled' %>">
      <a class="page-link" href="/?pageNum=<%= pageData.next %>">下一页</a>
    </li>
  </ul>
 
  <div class="text-right">
  总共<%= pageData.totalResult %>条
  总共<%= pageData.pageCount %>页 当前第<%= pageData.current %>页
  </div>
  
</nav>
</div>
<%- include('footer') %>

</body>

</html>
  
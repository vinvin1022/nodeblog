
<%- include('../header') %>
<div class="login">
  <h1>登录</h1>
  <form method="POST" action="/login">
    <div class="form-group">
      <label for="phone">手机号</label>
      <input name="memberCellphone" type="text" class="form-control" id="memberCellphone" aria-describedby="emailHelp" placeholder="手机号">
    </div>
    <div class="form-group">
      <label for="password">密码</label>
      <input name="loginPwd" type="password" class="form-control" id="loginPwd" placeholder="密码">
    </div>
    <div class="form-group">
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="maxAge" id="exampleRadios1" value="1" checked>
        <label class="form-check-label" for="exampleRadios1">
          一分钟
        </label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="maxAge" id="exampleRadios2" value="2">
        <label class="form-check-label" for="exampleRadios2">
          一小时
        </label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="maxAge" id="exampleRadios3" value="3">
        <label class="form-check-label" for="exampleRadios3">
          一天
        </label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">登录</button>
    <a  class="btn btn-primary" href="/register">注册</a>
  </form>
</div>
<style>
  .login{width:400px; position:absolute; top:50%; left:50%; transform: translate(-50%, -50%);}
  .login form{padding: 20px;border:1px solid #ccc; border-radius:5px;}
  .login h1{text-align:center}
</style>

<%- include('../footer') %> 
</body>
</html>